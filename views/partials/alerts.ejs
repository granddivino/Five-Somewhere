<style>
    .alert {
        color:pink;
        background: white;
        text-align: center;
        border-radius: 10px;
        text-align: center;
        width:40%;
        margin: auto;
    }

</style>

<div class="alert">
<% if (alerts.error) { %>
    <% alerts.error.forEach(msg => { %>
      <%= msg %>
    <% }) %>
<% } %>

<% if (alerts.success) { %>
    <% alerts.success.forEach(msg => { %>
        <%= msg %>
    <% }) %>
<% } %>
</div>