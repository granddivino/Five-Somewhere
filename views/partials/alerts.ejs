<style>
    .alert {
        width: 50%;
        border-radius: 4px;
        color: pink;
        background: white;
        text-align: center;
        margin: auto;
    }

</style>

<div class="alert">
<% if (alerts.error) { %>
    <% alerts.error.forEach(msg => { %>
      <%= msg %>
    <% }) %>
<% } %>

<% if (alerts.success) { %>
    <% alerts.success.forEach(msg => { %>
        <%= msg %>
    <% }) %>
<% } %>
</div>