<style>
    .loggedOut {
        border-radius: 10px;
        background-color: #f2f2f2;
        padding: 10px;
    }
    
    input[type=email],[type=password],[type=text] {
        text-align: center;
        width: 25%;
        padding: 12px 20px;
        margin: 8px 0;
        display: block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 25%;
        background-color: #0d2f8d;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
}
</style>

<h2>Signup</h2>
<form method="POST" action="/auth/signup" class="loggedOut">
    <label for="new-name">Name:</label>
    <input type="text" name="name" id="new-name">

    <label for="new-email">Email:</label>
    <input type="email" name="email" id="new-email">

    <label for="new-password">Password:</label>
    <input type="password" name="password" id="new-password">
    
    <input type="submit" value="Sign Up">

</form>
