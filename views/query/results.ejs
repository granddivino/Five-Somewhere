<style>
    .dranks {
        color: pink;
        text-align: center;
        
    }

    .searchHeader {
        color: pink;
        text-align: center;
        border-radius: 10px;
        justify-content: center;
    }

    .eachResult {
        width: 60%;
        margin: auto;
        background-color: #c55757;
    }

    .ingredients, .instructions, .drink {
        background-color: #c55757;
        border-radius: 4px;
        border-color: pink;
        font-size: 2vw;
        border-style: solid;
        width: 70%;
        padding: 10px;
        margin: auto;
    }


</style>
<a href="/">&larr; Back Home</a>
<div class="searchHeader">
    <h1> Search Results: </h1>
</div>
<% results.forEach(function(drink){ %>
    <div class="dranks">
        <div class="eachResult">
                <u>Drink:</u>
            <div class="drink">
                <%= drink.strDrink %>
            </div>
                <h2><img src="<%= drink.strDrinkThumb %>" width="250"></h2>
                <u>Ingredients:</u>
            <div class="ingredients">
                 <%= drink.strIngredient1 %>
            </div>
                <u>Instructions:</u>
            <div class="instructions">
                 <%= drink.strInstructions %>
            </div>
        </div>
        <form method="POST" action="/favorites">
            <input type="hidden" name="name" value="<%=drink.strDrink%>">
            <input type="hidden" name="ingredients" value="<%=drink.strIngredients%>">
            <input type="hidden" name="instructions" value="<%=drink.strInstructions%>">
            <input type="hidden"name="picture" value="<%=drink.strDrinkThumb%>">
            <input type="btn" value="Add to Favorites">
        </form>

        <% }) %>
    </div>