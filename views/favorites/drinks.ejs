<style>
    h2 {
        color:pink;
        text-align: center;
    }
    .favoriteDrinks {
        font-size: 3vw;
        border-radius: 10px;
        background-color: #c55757;
        color: pink;
        opacity: 0.9; 
    }

    form {
        text-align: center;
    }

    #favorited {
        background-color: #c55757;
        border-radius: 7px;
        border-color: pink;
        font-size: 2vw;
        border-style: solid;
        width: 70%;
        padding: 10px;
        margin: auto;
        color: pink;
        font-size: 2vw;
        justify-self: center;
    }
</style>

<div class="favoriteDrinks">
<h2><%= currentUser.name %>'s Favorite Drinks</h2>
</div>

<a href="/">&larr; Back Home</a>

 <%faveDrinks.forEach(function(drink) { %>
    
    <form method="POST" action="/favorites/drinks/<%= drink.id%>/?_method=DELETE">
        <input id="delete" type="submit" value="Delete from Favorites">
    </form>
        
    <p id="favorited">
          <b>Drink:</b>
          <%= drink.name %>
            <br>
          <b>Ingredients:</b>
          <%= drink.strIngredient1 %>
          <%= drink.strIngredient2 %>
          <%= drink.strIngredient3 %>
          <%= drink.strIngredient4 %>
          <%= drink.strIngredient5 %>
          <%= drink.strIngredient6 %>
          <%= drink.strIngredient7 %>
          <%= drink.strIngredient8 %>
          <%= drink.strIngredient9 %>
          <%= drink.strIngredient10 %>
          <%= drink.strIngredient11 %>
          <%= drink.strIngredient12 %>
          <%= drink.strIngredient13 %>
          <%= drink.strIngredient14 %>
          <%= drink.strIngredient15 %>
            <br>
          <b>Instructions:</b> 
          <%= drink.instructions %>
            <br>
          <img src="<%= drink.picture%>"width="250">
          <%})%>
    </p>
      